@model Product
@{
    string text ,btnClass = "",Action="", Controller="";
    if(User.IsInRole("Admin"))
    {
        text = "Back";
        //btnClass = "btn-danger";
        Action = "Index";
        Controller = "Product";

    }
    else
    {
        text = "ADD TO CART";
        Action = "AddItemToShoppingCart";
        Controller = "Order";
    }
    //btnClass = "backColor";
}
   <div class=" container py-5">
        <div class="row w-70 m-auto">
            <div class="col-md-5">
                <div class="item">
                    <img class="w-100" src="/@Model.ImageURL" alt="">
                </div>
            </div>
            <div class="col-md-7 py-4">
              <div>
                <h2 class="productHeader pt-1">@Model.Name</h2>
                <h5 class="pt-4">@Model.Description</h5>
                <h5 class="pt-4">@Model.PricePerUnit <span  class="fontColor">L.E</span></h5>
                <h5 class="pt-4">Sold By <span class="fontColor">@Model.Vendor.Name</span></h5>
                @if (User.IsInRole("Admin"))
                {
                    <a   asp-controller="@Controller" asp-action="@Action"  class="btn backColor text-white fw-bold w-70 mt-4">@text</a>
                }
                else
                {
                   <a   asp-controller="@Controller" asp-action="@Action"  asp-route-id="@Model.Id" class="btn backColor text-white fw-bold w-70 mt-4">@text</a>
  
                }
                @*                <a href="/Product/@Action/@Model.Id" class="btn @btnClass text-white fw-bold w-70 mt-4">@text</a>
*@              </div>
    </div>
   </div>