@model Amazon.Models.Product

@{
    ViewData["Title"] = "Edit";
     Layout = "_EmptyLayout";
}

<div class="w-40 p-5 mx-auto mt-5 productItem ">
     <h2 class="fontColor  text-center mb-3">Edit Product</h2>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageURL" class="control-label">Image</label>
                <input asp-for="ImageURL" class="form-control" value="@Model.ImageURL" accept="images/*" type="file" />
                <span asp-validation-for="ImageURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePerUnit" class="control-label"></label>
                <input asp-for="PricePerUnit" class="form-control" />
                <span asp-validation-for="PricePerUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label mt-2 ">Category</label>
                <select asp-for="CategoryId" class="form-control nice-myselect mt-1 form-input nice-select" asp-items="ViewBag.category"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VendorId" class="control-label pt-2 mt-2">Vendor</label>
                <select asp-for="VendorId" class="form-control nice-myselect mt-1 mb-4 form-input nice-select" asp-items="ViewBag.vendor"></select>
                <span asp-validation-for="VendorId" class="text-danger"></span>
            </div>
            <div class="form-group mt-5 p-3">
                <input type="submit" value="Save" class="btn backColor float-right" />
            </div>
        </form>
   
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
