@using Amazon.Data.ViewModels;
@model LoginVM;
@{
    ViewData["Title"] = "Log in To Your Page";
}

     <div class="login-form-area m-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-7 col-lg-8">
                        <form class="login-form" asp-action="Login" asp-controller="AccountManagement">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <!-- Login Heading -->
                            <div class="login-heading">
                                <span>Login</span>
                                <p>Enter Login details to get access</p>
                            </div>
                            @if(TempData["Error"] != null)
                            {
                                <div class="col-md-12 alert alert-danger">
                                    <span><b>Sorry</b> - @TempData["Error"]</span>
                                </div>
                            }
                            <!-- Single Input Fields -->
                            <div class="input-box">
                                <div class="single-input-fields">
                                    <label asp-for="EmailAddress">Username or Email Address</label>
                                    <input  asp-for="EmailAddress" type="text" placeholder="Username / Email address">
                                    <span asp-validation-for="EmailAddress" class="text-danger ml-2 h6"></span>
                                </div>
                                <div class="single-input-fields">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" type="password" placeholder="Enter Password">
                                    <span asp-validation-for="Password" class="text-danger ml-2 h6"></span>
                                </div>
                                <div class="single-input-fields login-check">
                                    <input type="checkbox" id="fruit1" name="keep-log">
                                    <label for="fruit1">Keep me logged in</label>
                                    <a href="#" class="f-right">Forgot Password?</a>
                                </div>
                            </div>
                            <!-- form Footer -->
                            <div class="login-footer">
                                <p>Don’t have an account? <a asp-controller="AccountManagement" asp-action="Signup">Sign Up</a>  here</p>
                                <button type="submit" class="submit-btn3 primary-btn">Login</button>
                            </div>
                        </form>
                         <form id="external-account" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl"  method="post" class="form-horizontal">
                            <div>
                                @foreach (var provider in Model.ExternalLogins)
                                {         
                                <p>
                               
                                        <button type="submit" class="btn btn-light btn-block" name="provider" value="@provider.Name" title="Log in using your account">
                                            <img src="https://cdn.freebiesupply.com/logos/large/2x/facebook-3-logo-png-transparent.png" alt="Facebook" style="height: 20px;" />
                                            Login With Facebook
                                        </button>
                                
                                </p>
                                }
                            </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- login Area End -->
         
                   
                
            